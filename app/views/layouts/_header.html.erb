<div class="row">
  <nav class="navbar navbar-default navbar-fixed-top navbar-custom" >
    <div class="container" >
      <div class="navbar-header" >
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar" >
          <span class="sr-only" ></span>
          <span class="icon-bar" ></span>
          <span class="icon-bar" ></span>
          <span class="icon-bar" ></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse" >
        <ul class="nav navbar-nav navbar-left" >
          <li>
            <%= link_to root_url, class: "header-item"  do %>
              <%= image_tag Settings.default_icon, size: Settings.icon_size %>
            <% end %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right" >
          <li class="dropdown" >
            <%= link_to "#", class: "dropdown-toggle hear-item" ,
              data: {toggle: "dropdown", role: "button"},
              aria: {haspopup: "true", expanded: "false"} do %>
              <i class="glyphicon glyphicon-user" ></i>
              <span class="caret" ></span>
            <% end %>
            <ul class="dropdown-menu" >
              <li>
                <%= link_to "#" do %>
                  <%= t :edit %>
                  <%= t :profile %>
                <% end %>
              </li>
              <li>
                <%= link_to t(:logout),"#" %>
              </li>
              <li role="separator" class="divider" ></li>
              <li class="dropdown-header" >
                <%= t :notifications %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to "#", class: "hear-item" do %>
              <i class="glyphicon glyphicon-edit" ></i>
              <%= t :signup %>
            <% end %>
          </li>
          <li>
            <%= link_to "#",
              data: {toggle: "modal", target: "#login-modal"},
              class: "hear-item" do %>
              <i class="glyphicon glyphicon-log-in" ></i>
              <%= t :login %>
            <% end %>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </nav>
</div>
<div class="top-space row" >
  <%= yield :top_space %>
</div>
