<div class="col-md-2 col-xs-12 text-center">
  <div class="form-group">
    <%= show_avatar @user, Settings.avatar_size %>
  </div>
  <div class="form-group">
    <%= link_to user_following_index_path(@user), data: {turbolinks: false} do %>
      <strong id="following">
        <%= @user.following.count %>
      </strong>
        <%= t ".following" %>
    <% end %>
    <strong> | </strong>
    <%= link_to user_followers_path(@user), data: {turbolinks: false} do %>
      <strong id="followers">
        <%= @user.followers.count %>
      </strong>
        <%= t ".followers" %>
    <% end %>
  </div>
  <div class="form-group" id="follow_form">
    <%= render "users/follow_form" if user_signed_in? %>
  </div>
</div>
<div class="col-md-3 col-xs-12">
  <h3 class="user-name"><label><%= @user.name %></label></h3>
  <h4><%= t ".birthday", birthday: @user.birthday %></h4>
  <h4><%= t ".address", address: @user.address %></h4>
</div>
