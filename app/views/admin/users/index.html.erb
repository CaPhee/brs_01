<% provide :title, t(".title") %>
<% provide :header_title, t(".title") %>
<div class="row">
  <%= form_tag admin_users_path, method: :get, id: "search_users" do %>
    <div class="row panel">
      <div class="input-group pull-right">
        <%= text_field_tag :key, params[:key], id: "search_user_box",
          class: "form-control", placeholder: t(:search_placeholder ) %>
        <div class="input-group-btn">
          <%= submit_tag t(:search), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= t :id %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".sex" %></th>
        <th><%= t ".birthday" %></th>
        <th></th>
      </tr>
    </thead>
    <div class="alert alert-danger hide" id="connect_failed">
      <label >
        <%= t :failed_connection %>
      </label>
    </div>
    <tbody id="result_search">
      <div class="row">
        <%= render @users if @users.any? %>
      </div>
    </tbody>
  </table>
  <div class="row text-center" id="paginate">
    <%= paginate @users, theme: "twitter-bootstrap-3" if @users.any? %>
  </div>
</div>

