<% provide :title, t(".title", book: @book.title) %>
<div class="row">
  <div class="container book-background">
    <%= render "books/book_info" %>
  </div>
</div>
<div class="row">
  <div class="panel panel-info col-md-12 col-xs-12">
    <div class="panel-heading ">
      <%= t ".introduce" %>
    </div>
    <div class="panel-body">
      <%= @book.introduce.html_safe %>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-info col-md-12 col-xs-12">
    <div class="panel-heading ">
      <h2><%= t ".description" %></h2>
    </div>
    <div class="panel-body">
      <%= @request.description.html_safe %>
    </div>
  </div>
</div>
<div class="row pull-right">
  <td>
    <%= link_to edit_request_path(@request), class: "btn btn-warning" do %>
      <i class="glyphicon glyphicon-edit"></i>
      <%= t ".edit" %>
    <% end %>
  </td>
  <td>
    <%= link_to request_path(@request), method: :delete,
      class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-remove"></i>
      <%= t ".delete" %>
    <% end %>
  </td>
</div>
