<%= form_for @book, html: { multipart: true } do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :number_of_pages %>
    <%= f.number_field :number_of_pages, min: 1, step: 1,
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id,
      options_from_collection_for_select(@all_categories, :id, :name,
        params[:category_id]), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :introduce %>
    <%= f.text_area :introduce, class: "form-control ckeditor" %>
  </div>
  <div class="form-group">
    <%= f.label :publish_date %>
    <%= f.date_field :publish_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <span class="picture">
      <%= f.file_field :cover %>
    </span>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
