<% provide :title, t(".title",name: @book.title) %>
<div class="row">
  <div class="container book-background">
    <%= render "book_info" %>
  </div>
</div>
<div class="row">
  <div class="panel panel-info col-md-12 col-xs-12">
    <div class="panel-heading ">
      <%= t ".introduce" %>
    </div>
    <div class="panel-body">
      <%= @book.introduce.html_safe %>
    </div>
  </div>
</div>
<div class="row">
  <div class="book-introduce pull-right panel panel-info col-md-10 col-xs-12">
    <% if @book.reviews.any? %>
      <ol class="comments">
        <%= render @book.reviews %>
      </ol>
    <% end %>
  </div>
</div>
